<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<View
		android:layout_width="match_parent"
		android:layout_height="3dp"
		android:layout_marginLeft="@dimen/step_diameter"
		android:layout_marginRight="@dimen/step_diameter"
		android:background="@drawable/shape_progress"
		android:paddingBottom="1dp"
		android:paddingTop="1dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>

	<android.support.constraint.ConstraintLayout
		android:id="@+id/bar_cl_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<xyz.slashg.unpasito.StepView
			android:id="@+id/step_1"
			android:layout_width="@dimen/step_diameter"

			android:layout_height="@dimen/step_diameter"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"/>

		<xyz.slashg.unpasito.StepView
			android:id="@+id/step_2"
			android:layout_width="@dimen/step_diameter"

			android:layout_height="@dimen/step_diameter"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"/>
	</android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>